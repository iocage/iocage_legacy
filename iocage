EOT
}


if [ -z "$1" ] ; then
    __usage
    exit 0
fi

if [ "$1" == "help" ] ; then
    __help
    exit 0
fi


if [ "$(whoami)" != "root" ] ; then
    echo "* Only root can manage jails!"
    exit 1
fi

__find_mypool
__parse_cmd "$@"
