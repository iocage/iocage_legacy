#!/bin/sh

# See whether given command is readonly
# and therefore doesn't need root credentials
__readonly_cmd () {
    case "$1" in
        defaults|df|get|list) return 0;;
    esac

    return 1
}

# Process command line options-------------------------
__parse_cmd () {
    while [ $# -gt 0 ] ; do
        case "$1" in
            activate)   __activate "$2"
                        exit
                ;;
            cap)        __rctl_limits "$2"
                        exit
                ;;
            chroot)     __chroot "$2" "$3"
                        exit
                ;;
            clean)      __clean "$2"
                        exit
                ;;
            clone)      __export_props "$@"
                        __clone_jail "$2"
                        exit
                ;;
            console)    __console "$2"
                        exit
                ;;
            create)     __export_props "$@"
                        __create_jail "$@"
                        exit
                ;;
            deactivate) __deactivate "$2"
                        exit
                ;;
            defaults)   __print_defaults
                        exit
                ;;
            destroy)    __destroy_jail "$2" "$3"
                        exit
                ;;
            df)         __print_disk
                        exit
                ;;
            exec)       shift
                        __exec "$@"
                        exit
                ;;
            export)     __export "$2"
                        exit
                ;;
            fetch)      __export_props "$@"
                        __fetch_release
                        exit
                ;;
            get)        __get_jail_prop "$2" "$3"
                        exit
                ;;
            help)       __help
                        exit
                ;;
            init-host)  __init_host "$2" "$3"
                        exit
                ;;
            inuse)      __rctl_inuse "$2"
                        exit
                ;;
            import)     __export_props "$@"
                        __import "$2"
                        exit
                ;;
            limits)     __rctl_list "$2"
                        exit
                ;;
            list)       __list_jails "$2"
                        exit
                ;;
            package)    __package "$2"
                        exit
                ;;
            promote)    __promote "$2"
                        exit
                ;;
            pull)       __export_props "$@"
                        __pull "$2"
                        exit
                ;;
            push)       __push "$2"
                        exit
                ;;
            rcboot)     __rc_jails boot
                        exit
                ;;
            rcshutdown) __rc_jails shutdown
                        exit
                ;;
            record)     __record "$2" "$3"
                        exit
                ;;
            reset)      __reset_jail_props "$2"
                        exit
                ;;
            restart)    __restart_jail "$2"
                        exit
                ;;
            rollback)   __rollback "$2"
                        exit
                ;;
            runtime)    __runtime "$2"
                        exit
                ;;
            set)        __export_props "$@"
                        __set_jail_prop "$2" "$3"
                        exit
                ;;
            show)       __show "$2"
                        exit
                ;;
            snaplist)   __snaplist "$2"
                        exit
                ;;
            snapremove) __snapremove "$2"
                        exit
                ;;
            snapshot)   __snapshot "$2"
                        exit
                ;;
            start)      __start_jail "$2"
                        exit
                ;;
            stop)       __stop_jail "$2"
                        exit
                ;;
            uncap)      __rctl_uncap "$2"
                        exit
                ;;
            update)     __update "$2" "$3"
                        exit
                ;;
            upgrade)     __upgrade "$2"
                        exit
                ;;
            pkg)        __pkg_wrapper "$@"
                        exit
                ;;
                *)      __usage
                        exit
                ;;
        esac
        shift
    done
}
